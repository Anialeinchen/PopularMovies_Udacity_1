<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_movie_title"
        android:background="#80CBC4"
        android:text="Chappie"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="34sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_poster_iv"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:gravity="top|start"
            android:layout_height="280dp" />

        <View
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_horizontal|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_release_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="2015" />

            <TextView
                android:id="@+id/detail_movie_length_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="90min"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/rdetail_anking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:text="7.2/10" />

            <RatingBar
                android:id="@+id/rating_bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="10"
                android:paddingBottom="64dp"
                android:rating="2.5"
                android:stepSize="0.5" />

            <Button
                android:id="@+id/detail_favorites_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80CBC4"
                android:onClick="addMovieToFavourites"
                android:padding="4dp"
                android:text="mark as \nfavorite" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:id="@+id/detail_movie_description"
        android:text="@string/lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#004D40"/>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Trailers:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/ic_play_arrow_black_24px"
                    android:id="@+id/trailer_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/trailer1_tv"
                    android:text="Trailer 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>